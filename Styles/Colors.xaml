<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="blueColor">#3498DB</Color>
    <Color x:Key="orangeColor">#E67E22</Color>
    <Color x:Key="mintColor">#1ABC9C</Color>
    <Color x:Key="darkColor">#34495E</Color>
    <Color x:Key="lightColor">#BDC3C7</Color>
    <Color x:Key="redColor">Red</Color>

    <SolidColorBrush x:Key="blueBrush" Color="{StaticResource blueColor}"/>
    <SolidColorBrush x:Key="orangeBrush" Color="{StaticResource orangeColor}"/>
    <SolidColorBrush x:Key="mintBrush" Color="{StaticResource mintColor}"/>
    <SolidColorBrush x:Key="darkBrush" Color="{StaticResource darkColor}"/>
    <SolidColorBrush x:Key="lightBrush" Color="{StaticResource lightColor}"/>
</ResourceDictionary>